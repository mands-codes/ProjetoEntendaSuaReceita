<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/roboto"
                android:text="Cadastrar Receita"
                android:textAlignment="center"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/txtNomeMedicamento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:text="Nome do Medicamento"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/editNomeMedicamento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:fontFamily="@font/roboto"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/txtExemploDosagem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:text="Exemplo: Losartana 15mg"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txtPosologia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/roboto"
                android:text="Posologia"
                android:textAlignment="center"
                android:textSize="20sp" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:text="Quantidade:"
                    android:textSize="16sp"
                    app:layout_row="0" />

                <EditText
                    android:id="@+id/editQuantidade"
                    android:layout_width="91dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:fontFamily="@font/roboto"
                    android:hint="2"
                    android:inputType="number"
                    app:layout_column="1"
                    app:layout_row="0"
                    tools:ignore="TouchTargetSizeCheck" />

                <Spinner
                    android:id="@+id/spinnerTipos"
                    android:layout_width="224dp"
                    android:layout_height="44dp"
                    android:contentDescription="comprimidos"
                    android:fontFamily="@font/roboto"
                    tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />

            </GridLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/txtDe"
                    android:layout_width="31dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:paddingHorizontal="5dp"
                    android:text="De:"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/editHora1"
                    android:layout_width="82dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:fontFamily="@font/roboto"
                    android:hint="6"
                    android:inputType="number"
                    app:layout_column="1"
                    app:layout_row="0"
                    tools:ignore="TouchTargetSizeCheck" />

                <TextView
                    android:id="@+id/txtEm"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:paddingHorizontal="10dp"
                    android:text="em"
                    android:textSize="16sp"
                    app:layout_column="2"
                    app:layout_row="0" />

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="67dp"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="4"
                    android:fontFamily="@font/roboto"
                    android:paddingHorizontal="10dp"
                    android:text="horas."
                    android:textSize="16sp"
                    app:layout_column="4"
                    app:layout_row="0" />

                <TextView
                    android:id="@+id/txtHora2"
                    android:layout_width="77dp"
                    android:layout_height="38dp"
                    android:fontFamily="@font/roboto"
                    app:layout_column="3"
                    app:layout_row="0" />

            </GridLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:text="Durante:"
                    android:textSize="16sp"
                    app:layout_column="0"
                    app:layout_row="0" />

                <EditText
                    android:id="@+id/editDuracao"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:fontFamily="@font/roboto"
                    android:hint="20 dias"
                    android:inputType="textPersonName"
                    android:minHeight="48dp"
                    app:layout_column="1"
                    app:layout_row="0" />

                <Button
                    android:id="@+id/btnTraduzir"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:backgroundTint="@color/primary"
                    android:fontFamily="@font/roboto"
                    android:text="Traduzir"
                    app:layout_column="2"
                    app:layout_row="0" />

            </GridLayout>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:text="Como tomar este medicamento:"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtComoTomar"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:fontFamily="@font/roboto"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView23"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:text="Sugestões de Horário"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtSugestoes"
                android:layout_width="match_parent"
                android:layout_height="101dp"
                android:fontFamily="@font/roboto"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnDefinirAlarme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Definir Alarme" />

                <TextView
                    android:id="@+id/txtHorarioAlarme"
                    android:layout_width="193dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

            <Button
                android:id="@+id/btnAbrirAlarme"
                android:layout_width="208dp"
                android:layout_height="wrap_content"
                android:text="Visualizar Alarme" />

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="429dp"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btnSalvar"
            android:layout_width="184dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="@color/success"
            android:fontFamily="@font/roboto"
            android:text="Salvar" />

        <Button
            android:id="@+id/btnCancelar"
            android:layout_width="184dp"
            android:layout_height="40dp"
            android:backgroundTint="@color/danger"
            android:fontFamily="@font/roboto"
            android:text="Cancelar" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>